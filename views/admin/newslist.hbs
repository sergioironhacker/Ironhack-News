<h1>News</h1>

<div class="users-section">
  <h2>News list</h2>
  <div class="row">
    {{#each news}}
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body d-flex flex-column align-items-center">
            <h3>{{this.title}}</h3>
            <h4>{{this.subtitle}}</h4>
            <p>{{this.newsContent}}</p>
            <img src="{{this.picture}}" class="img-fluid" style="max-width: 400px; max-height: 300px;">
          </div>
        </div>
      </div>
        <div>
    <a class="btn btn-success" href="/admin/news/{{_id}}/update" style="width: fit-content;"><i data-feather="edit"></i></a>
    <a class="btn btn-danger" href="/admin/news/{{_id}}/delete" style="width: fit-content;"><i data-feather="trash-2"></i></a>
    <a class="btn btn-secondary" href="/admin/news" style="width: fit-content;"><i data-feather="book"></i></a>
  </div>
    {{/each}}
  </div>
</div>
