<h1 class="mt-3">Panel de admin</h1>

{{! Latest News Column }}
<div class="container mt-4">
  <div class="row mt-4 mb-4">
    <div class="col-md-12">
      <a href="/admin/news/create" class="btn btn-dark">Crear nueva noticia</a>
    </div>
  </div>
 
 <div class="col-md-8">
  <h2>Ãšltimas noticias</h2>
  <ul class="list-group">
    {{#each news}}
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <a href="/news/{{_id}}">{{title}}</a>
        <div class="ml-auto"> <!-- Utiliza la clase ml-auto para alinear a la derecha -->
          <a class="btn" href="/admin/news/{{_id}}/update">
            <i class="bi bi-pencil text-dark"></i>
          </a>

          <a class="btn" href="/admin/news/{{_id}}/delete">
            <i class="bi bi-trash text-dark"></i>
          </a>
        </div>
      </li>
    {{/each}}
  </ul>
</div>


    {{! Registered Users Column }}
    <div class="col-md-4">
      <h2>Usuarios registrados</h2>
      <ul class="list-group">
        {{#each users}}
          <li class="list-group-item"><a
              href="/profile/{{_id}}"
            >{{username}}</a></li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>