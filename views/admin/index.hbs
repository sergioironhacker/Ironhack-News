<h1 class="mt-3">Panel de admin</h1>
{{! Latest News and Registered Users Columns }}
<div class="container mt-4">
  <div class="row mt-4 mb-4">
    <!-- Últimas noticias Column -->
    <div class="col-md-8">
      <h2>Últimas noticias</h2>
      <ul class="list-group">
        {{#each news}}
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <a href="/news/{{_id}}">{{title}}</a>
            <div class="ml-auto">
              <a class="btn" href="/admin/news/{{_id}}/update">
                <i class="bi bi-pencil text-dark"></i>
              </a>
              <a class="btn" href="/admin/news/{{_id}}/delete">
                <i class="bi bi-trash text-dark"></i>
              </a>
            </div>
          </li>
        {{/each}}
      </ul>
    </div>
    <!-- Usuarios registrados Column -->
    <div class="col-md-4">
      <h2>Usuarios registrados</h2>
      <ul class="list-group">
        {{#each users}}
          <li class="list-group-item"><a
              href="/profile/{{_id}}"
            >{{username}}</a></li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>