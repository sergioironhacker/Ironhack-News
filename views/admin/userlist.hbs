<h1>Users</h1>

<div class="users-section">
  <h2>Users list</h2>
  <div class="row">
    {{#each users}}
      <div class="col-md-4 mb-4">
        <div class="card " style="width: 100%; height: 100%;"  >
          <div class="card-body d-flex flex-column align-items-center">
            <h3>{{this.username}}</h3>
            <h4>{{this.email}}</h4>
            <img src="{{this.picture}}" class="img-fluid" style="max-width: 400px; max-height: 300px;">
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
