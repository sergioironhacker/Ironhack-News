<h1 class="mt-3">Perfil de {{user.username}}</h1>

<div class="container profile-container text-center">
  <h1>{{user.username}}</h1>
  <img
    class="profile-image"
    id="profile-img"
    src="{{user.picture}}"
    alt="Profile Image"
  />

  {{! Commented News Column }}

  <div class="container mt-4">
    <div class="row">
      <div class="col-md-8">
        <h2>Noticias comentadas</h2>
        <ul class="list-group">
          {{#each user.commentedNews}}
            <li class="list-group-item">
              <a href="/news/{{this.news._id}}">{{this.news.title}}</a>
              <p>{{this.content}}</p>
            </li>
          {{/each}}
        </ul>
      </div>

      {{! Liked News Column }}
      <div class="col-md-4">
        <h2>Noticias con Me gusta</h2>
        <ul class="list-group">
          {{#each user.likedNews}}
            <li class="list-group-item"><a href="/news/{{this.news._id}}">{{this.news.title}}</a></li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>