<div class="container">
  <h1>The Japan News</h1>

  <div class="row">
    {{#each articles}}
    <div class="col-md-3">
      <div class="article">
        <h6>{{this.title}}</h6>
        <p>{{this.description}}</p>
        <p>Publicado el: {{this.publishedAt}}</p>
        <p>Fuente: {{this.source.name}}</p>
        <img src="{{this.image}}" alt="{{this.title}}" class="img-fluid">
        <p>{{this.content}}</p>
       <button class="btn btn-dark" onclick="window.open('{{this.url}}', '_blank')">Leer m√°s</button>
      </div>
    </div>
    {{/each}}
  </div>

</div>