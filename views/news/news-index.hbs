 <h1 class="display-2 text-center " style="margin-top: 1rem;">Noticias Ironhackers</h1>

<div class="container mt-5 text-center">
 
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    {{#each news as |singleNews|}}
    <div class="col">
      <div class="card" style="width: 100%; height: 100%;">

        <img src="{{singleNews.image}}" class="card-img-top" style="max-height: 200px; object-fit: cover;"
          alt="{{singleNews.title}}">
        <div class="card-body d-flex flex-column justify-content-between">
          <h5 class="card-title">{{singleNews.title}}</h5>
          <p class="card-text">{{singleNews.subtitle}}</p>
          <div class="mt-auto text-center">
            <a class="btn btn-primary" href="/news/{{singleNews._id}}">Leer m√°s</a>

          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>